    "url": "https://github.com/soruly/pasu/issues"
  },
  "homepage": "https://github.com/soruly/pasu#readme",
  "dependencies": {
    "@maxmind/geoip2-node": "^6.3.4",
    "cookie-parser": "^1.4.7",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "fido2-lib": "^3.5.6"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "prettier": "^3.8.0"
